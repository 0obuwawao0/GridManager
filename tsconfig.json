{
    "compilerOptions": {
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "outDir": "./dist/",
        "module": "es6",
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@*": ["./src/*", "./typings/*"]
        }
    }
}
